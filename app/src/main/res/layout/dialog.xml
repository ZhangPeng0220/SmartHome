<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADBDA">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场景名称"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameEdit"
                android:textSize="15dp"
                android:background="#FFFFFF"
                android:layout_toEndOf="@+id/name"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="空调温度"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:id="@+id/air"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="音乐类型"
                android:layout_below="@+id/air"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:id="@+id/music"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="灯光类型"
                android:layout_below="@+id/music"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:id="@+id/light"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:background="#FFFFFF"
                android:id="@+id/temEdit"
                android:layout_alignBaseline="@+id/air"
                android:layout_alignBottom="@+id/air"
                android:layout_alignStart="@+id/nameEdit"
                />
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:background="#FFFFFF"
                android:id="@+id/musicEdit"
                android:layout_alignBaseline="@+id/music"
                android:layout_alignBottom="@+id/music"
                android:layout_alignStart="@+id/temEdit"
                />
            <ImageButton
                android:id="@+id/muchoice"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/music"
                android:layout_alignEnd="@+id/musicEdit"
                android:background="@drawable/drop"
                android:onClick="mushow"
                />
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:background="#FFFFFF"
                android:id="@+id/lightEdit"
                android:layout_alignBaseline="@+id/light"
                android:layout_alignBottom="@+id/light"
                android:layout_alignStart="@+id/musicEdit"
                />
            <ImageButton
                android:id="@+id/ligchoice"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/light"
                android:layout_alignEnd="@+id/musicEdit"
                android:background="@drawable/drop"
                android:onClick="ligshow"
                />
        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取 消"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#000000"
            />
        <TextView
            android:id="@+id/sure"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确        定"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

    </LinearLayout>


</LinearLayout>